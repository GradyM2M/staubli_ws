<launch>
    <!-- 不使用仿真时间 -->
    <param name="/use_sim_time" value="false" />

    <!-- 启动 arbotix driver-->
    <arg name="sim" default="true" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find robot_description)/urdf/stab.xacro'" />

    <node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
        <rosparam file="$(find robot_description)/config/stab.yaml" command="load" />
        <param name="sim" value="true"/>
    </node>

    <!-- <node name="gripper_controller" pkg="arbotix_controllers" type="gripper_controller">
    
    </node> -->
    
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" />

    <include file="$(find stab_moveit_config)/launch/move_group.launch" />

    <!-- 启动rviz可视化界面 -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find stab_planning)/config/pick_and_place.rviz" required="true" />

</launch>
